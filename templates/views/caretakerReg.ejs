<body>
    <!-- <center> -->
    <form action="/caretakerReg" method="post" enctype="multipart/form-data">

        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-9 mx-auto">
                    <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
                        <div class="card-img-left d-none d-md-flex">
                            <!-- Background image for card set in CSS! -->
                        </div>
                        <div class="card-body p-4 p-sm-5">
                            <h5 class="card-title text-center mb-5 fw-light fs-5">Register</h5>
                            <form>

                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control" id="floatingInputEmail" name="email"
                                        placeholder="Email" required>
                                    <label for="floatingInputUsername">Email</label>
                                    <span style="color: red;">
                                        <%= (typeof message2 !="undefined" ? message2 : "" ) %>
                                    </span>

                                </div>

                                <div class="form-floating mb-3">
                                    <input type="number" class="form-control" id="floatingInputEmail" name="charge"
                                        placeholder="Charge" required>
                                    <label for="floatingInputEmail">Charge (per hour)</label>
                                </div>

                                <div class="form-floating mb-3">
                                    <!-- <label for="">Time slot</label> -->
                                    <p>Time slot:</p>
                                    <!-- <label for="9-12am"> -->
                                        <input type="checkbox" id="floatingInputEmail" name="slot" value="9-12am" >
                                    <!-- </label> -->
                                    <span>9am - 12pm</span>
                                    <br>
                                    <!-- <label for=""></label> -->
                                    <input type="checkbox" id="floatingInputEmail" name="slott" value="12-3pm" >
                                    <span>12pm - 3pm</span>
                                    <br>

                                    <input type="checkbox" name="slotth" id="" value="3-6pm" >
                                    <span>3pm - 6pm</span>
                                    <br>

                                    <input type="checkbox" name="slotf" id="" value="6-9pm">
                                    <span>6pm - 9pm</span>

                                </div>


                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" id="floatingPassword"
                                        placeholder="Password" name="pass" required>
                                    <label for="floatingPassword">Password</label>
                                </div>

                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" id="floatingPasswordConfirm"
                                        placeholder="Confirm Password" name="cpass" required>
                                    <label for="floatingPasswordConfirm">Confirm Password</label>
                                </div>

                                <div class="d-grid mb-2">
                                    <span>Upload your image</span>
                                    <input type="file" name="profile-file" required/>

                                    <!-- <button class="btn btn-lg btn-primary btn-login fw-bold text-uppercase"
                                        type="submit">Register</button> -->
                                    <span style="color: red;">
                                        <%= (typeof message !="undefined" ? message : "" ) %>
                                    </span>
                                    <br>

                                    <span style="color: green;">
                                        <%= (typeof message1 !="undefined" ? message1 : "" ) %>
                                    </span>

                                    <input type="submit" name="" id="" value="Submit">
                                    <!-- <input type="submit" name="" id="" value="Submit"> -->

                                </div>

                                <!-- <a class="d-block text-center mt-2 small" href="#">Have an account? Sign In</a>

                                <hr class="my-4">

                                <div class="d-grid mb-2">
                                    
                                    <button class="btn btn-lg btn-google btn-login fw-bold text-uppercase"
                                        type="submit">
                                        <i class="fab fa-google me-2"></i> Sign up with Google
                                    </button>

                                </div>

                                <div class="d-grid">

                                    <button class="btn btn-lg btn-facebook btn-login fw-bold text-uppercase"
                                        type="submit">
                                        <i class="fab fa-facebook-f me-2"></i> Sign up with Facebook
                                    </button>

                                </div> -->

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br> <br>
    </form>


